<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:weightSum="960"
    >
    <FrameLayout
        android:id="@+id/list_frame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="142"
        android:gravity="center"
        />

    <com.ioter.clothesstrore.wdiget.APagingViewPager
        android:id="@+id/img_play_viewpager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="405"
        />

    <FrameLayout
        android:id="@+id/together_frame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="413"
        android:gravity="center"
        />


</LinearLayout>
