<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    >

    <ImageView
        android:id="@+id/epc_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/epc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/epc_iv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/epc_iv"
        android:text="fds"
        android:textSize="8sp"
       />


    <TextView
        android:id="@+id/epc_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/epc_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/epc_iv"
        android:text="fsdff "
        android:textSize="5sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/epc_iv"
        android:layout_below="@+id/epc_style"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/epc_iv"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/epc_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="fsdff "
            android:textSize="6sp"
            />

        <TextView
            android:id="@+id/epc_size"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="fsdff "
            android:textSize="6sp"
            />

        <TextView
            android:id="@+id/epc_color"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="fsdff "
            android:textSize="6sp"
            />

    </LinearLayout>

</RelativeLayout>
